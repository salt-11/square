<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hawy.quick.agent.modular.business.mapper.TAgentInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.hawy.quick.agent.modular.business.entity.TAgentInfo">
        <id column="id" property="id" />
        <result column="agent_name" property="agentName" />
        <result column="account" property="account" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
        <result column="balance" property="balance" />
        <result column="name" property="name" />
        <result column="card_no" property="cardNo" />
        <result column="bank_name" property="bankName" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, agent_name, account, password, salt, balance, name, card_no, bank_name, create_time
    </sql>

    <update id="addBalance">
        update t_agent_info set balance=balance + #{balance} where id = #{agentId}
    </update>

    <update id="minusBalance">
        update t_agent_info set balance=balance - #{balance} where id = #{agentId} and balance >= #{balance}
    </update>

</mapper>
