<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hawy.quick.agent.modular.system.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.hawy.quick.agent.modular.system.entity.User">
        <id column="id" property="id" />
        <result column="agent_name" property="agentName" />
        <result column="account" property="account" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
    </resultMap>

    <select id="getByAccount" resultType="cn.hawy.quick.agent.modular.system.entity.User">
        SELECT
            id as id,
            ACCOUNT AS account,
            PASSWORD AS PASSWORD,
            SALT AS salt,
            agent_name as name,
            CREATE_TIME AS createTime
        FROM
            t_agent_info
        where ACCOUNT = #{account}
    </select>

    <select id="getDeptIdsByUserId" resultType="java.lang.String">
        SELECT
            id
        FROM
            t_dept_info
        where agent_id = #{userId}
    </select>

</mapper>
