<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hawy.quick.partner.modular.system.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.hawy.quick.partner.modular.system.entity.User">
        <id column="id" property="id" />
        <result column="dept_name" property="deptName" />
        <result column="account" property="account" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
    </resultMap>

    <update id="changePwd">
		update t_dept_info set password = #{pwd} where id = #{userId}
	</update>


    <select id="getByAccount" resultType="cn.hawy.quick.partner.modular.system.entity.User">
        SELECT
            id as id,
            ACCOUNT AS account,
            PASSWORD AS PASSWORD,
            SALT AS salt,
            dept_name as name,
            CREATE_TIME AS createTime
        FROM
            t_dept_info
        where ACCOUNT = #{account}
    </select>

</mapper>
