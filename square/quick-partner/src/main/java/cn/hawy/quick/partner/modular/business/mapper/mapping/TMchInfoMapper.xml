<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hawy.quick.partner.modular.business.mapper.TMchInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.hawy.quick.partner.modular.business.entity.TMchInfo">
        <id column="mch_id" property="mchId" />
        <result column="mch_name" property="mchName" />
        <result column="mch_short_name" property="mchShortName" />
        <result column="area_code" property="areaCode" />
        <result column="mch_address" property="mchAddress" />
        <result column="mch_status" property="mchStatus" />
        <result column="dept_id" property="deptId" />
        <result column="mobile" property="mobile" />
        <result column="email" property="email" />
        <result column="customer_name" property="customerName" />
        <result column="customer_ident_type" property="customerIdentType" />
        <result column="customer_ident_no" property="customerIdentNo" />
        <result column="sett_mode" property="settMode" />
        <result column="sett_circle" property="settCircle" />
        <result column="card_kind" property="cardKind" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        mch_id as mchId, mch_name as mchName, mch_short_name as mchShortName, area_code as areaCode, mch_address as mchAddress, mch_status as mchStatus, dept_id as deptId, mobile, email, customer_name as customerName,  customer_ident_type as customerIdentType, customer_ident_no as customerIdentNo, sett_mode as settMode, sett_circle as settCircle, card_kind as cardKind, create_time as createTime
    </sql>
    
    <select id="findAll" resultType="map">
    	select
        <include refid="Base_Column_List"/> 
     	from t_mch_info  where 1=1
     	<if test="mchId != null and mchId !=''">
            and mch_id = #{mchId}
        </if>
        <if test="beginTime != null and beginTime !=''">
            and create_time &gt;= CONCAT(#{beginTime},' 00:00:00')
        </if>
        <if test="endTime != null and endTime != ''">
            and create_time &lt;= CONCAT(#{endTime},' 23:59:59')
        </if>
        <if test="mchName != null and mchName !=''">
            and mch_name = #{mchName}
        </if>
        <if test="id != null and id !=''">
            and dept_id = #{id}
        </if>
        <if test="mobile != null and mobile !=''">
            and mobile = #{mobile}
        </if>
        order by create_time  desc
    </select>

</mapper>
